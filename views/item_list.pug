doctype html
html
  head
    include header.pug
    script(src='/static/js/url.min.js')
    script(src='/static/js/navbar.js')
  body
    .container
      include navbar.pug
      br
      a.btn.btn-primary(href='/create')= 'Create'
      br
      br
      .table-responsive
        table.table.table-striped.table-bordered
          thead
            tr
              td= 'Summary'
              td= 'Size'
              td= 'Yahoo'
              td= 'Buyer'
          tbody
            each item in items
              - let itemUrl = '/item/' + item._id;
              tr
                td
                  a(href=itemUrl)= item.summary
                td= item.size
                if item.yahooId
                  - let yahooUrl = 'http://auctions.yahoo.co.jp/jp/auction/' + item.yahooId;
                  td
                    a(href=yahooUrl)= 'link'
                else
                  td= ''
                if item.buyerName
                  - let buyerStr = item.buyerName + ' ' + item.buyerPostCode + ' ' + item.buyerAddress;
                  td= buyerStr
                else
                  td= ''
